{
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "pnpm typecheck && cross-env NODE_ENV=production react-router build",
    "bundlecheck": "vite-bundle-visualizer",
    "clean": "rm -rf node_modules pnpm-lock.yaml build",
    "db:gen": "drizzle-kit generate --config app/.server/db/config.ts",
    "db:push": "drizzle-kit push --config app/.server/db/config.ts",
    "db:task": "tsx --env-file=.env app/.server/db/task.ts",
    "deploy": "sh deploy.sh",
    "dev": "react-router dev",
    "fmt": "prettier -w .",
    "start": "cross-env NODE_ENV=production PORT=3001 react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss",
      "prettier-plugin-organize-imports",
      "prettier-plugin-packagejson"
    ]
  },
  "dependencies": {
    "@fontsource/merriweather": "^5.2.11",
    "@heroui/react": "^2.8.8",
    "@hookform/resolvers": "^5.2.2",
    "@react-router/fs-routes": "^7.13.0",
    "@react-router/node": "^7.13.0",
    "@react-router/serve": "^7.13.0",
    "@tanstack/react-query": "^5.90.20",
    "@tanstack/react-query-devtools": "^5.91.3",
    "@trpc/client": "^11.9.0",
    "@trpc/server": "^11.9.0",
    "@trpc/tanstack-react-query": "^11.9.0",
    "boring-avatars": "^2.0.4",
    "chance": "^1.1.13",
    "cookie": "^1.1.1",
    "cross-env": "^10.1.0",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.29.2",
    "isbot": "^5.1.34",
    "jotai": "^2.17.0",
    "jsonwebtoken": "^9.0.3",
    "lucide-react": "^0.563.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.13",
    "postgres": "^3.4.8",
    "react": "^19.2.4",
    "react-activity-calendar": "^3.1.1",
    "react-dom": "^19.2.4",
    "react-hook-form": "^7.71.1",
    "react-infinite-scroll-hook": "^6.0.1",
    "react-router": "^7.13.0",
    "superjson": "^2.2.6",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@react-router/dev": "^7.13.0",
    "@tailwindcss/vite": "^4.1.18",
    "@types/chance": "^1.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^25.1.0",
    "@types/nodemailer": "^7.0.9",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.31.8",
    "prettier": "^3.8.1",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-packagejson": "^3.0.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.1.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-tsconfig-paths": "^6.0.5"
  }
}
