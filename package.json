{
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "pnpm typecheck && cross-env NODE_ENV=production react-router build",
    "start": "cross-env NODE_ENV=production PORT=3001 react-router-serve ./build/server/index.js",
    "db:push": "drizzle-kit push --config app/.server/db/config.ts",
    "db:gen": "drizzle-kit generate --config app/.server/db/config.ts",
    "db:task": "tsx --env-file=.env app/.server/db/task.ts",
    "fmt": "prettier -w .",
    "typecheck": "react-router typegen && tsc",
    "bundlecheck": "vite-bundle-visualizer",
    "clean": "rm -rf node_modules pnpm-lock.yaml build",
    "deploy": "sh deploy.sh"
  },
  "dependencies": {
    "@fontsource/merriweather": "^5.2.9",
    "@heroui/react": "2.8.0-beta.7",
    "@heroui/theme": "2.4.17",
    "@hookform/resolvers": "^5.1.1",
    "@react-router/fs-routes": "^7.6.2",
    "@react-router/node": "^7.6.2",
    "@react-router/serve": "^7.6.2",
    "@tanstack/react-query": "^5.80.6",
    "@tanstack/react-query-devtools": "^5.80.6",
    "@trpc/client": "^11.3.1",
    "@trpc/server": "^11.3.1",
    "boring-avatars": "^1.11.2",
    "chance": "^1.1.13",
    "cookie": "^1.0.2",
    "cross-env": "^7.0.3",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.2",
    "framer-motion": "^12.17.0",
    "isbot": "^5.1.28",
    "jotai": "^2.12.5",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.514.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.3",
    "postgres": "^3.4.7",
    "react": "^19.1.0",
    "react-activity-calendar": "^2.7.12",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.57.0",
    "react-hot-toast": "^2.5.2",
    "react-infinite-scroll-hook": "^6.0.0",
    "react-router": "^7.6.2",
    "superjson": "^2.2.2",
    "tailwind-merge": "^3.3.1",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.25.61"
  },
  "devDependencies": {
    "@react-router/dev": "^7.6.2",
    "@tailwindcss/postcss": "^4.1.8",
    "@tailwindcss/vite": "^4.1.8",
    "@types/chance": "^1.1.6",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^24",
    "@types/nodemailer": "^6.4.17",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "drizzle-kit": "^0.31.1",
    "prettier": "^3.5.3",
    "prettier-plugin-tailwindcss": "^0.6.12",
    "tailwindcss": "^4.1.8",
    "tsx": "^4.20.1",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
