{
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "react-router dev",
    "build": "pnpm typecheck && cross-env NODE_ENV=production react-router build",
    "start": "cross-env NODE_ENV=production PORT=3001 react-router-serve ./build/server/index.js",
    "db:push": "drizzle-kit push --config app/.server/db/config.ts",
    "db:gen": "drizzle-kit generate --config app/.server/db/config.ts",
    "db:task": "tsx --env-file=.env app/.server/db/task.ts",
    "fmt": "prettier -w .",
    "typecheck": "react-router typegen && tsc",
    "bundlecheck": "vite-bundle-visualizer",
    "clean": "rm -rf node_modules pnpm-lock.yaml build",
    "deploy": "sh deploy.sh"
  },
  "dependencies": {
    "@fontsource/merriweather": "^5.2.9",
    "@heroui/react": "2.8.3",
    "@hookform/resolvers": "^5.2.1",
    "@react-router/fs-routes": "^7.8.2",
    "@react-router/node": "^7.8.2",
    "@react-router/serve": "^7.8.2",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.87.1",
    "@trpc/client": "^11.5.1",
    "@trpc/server": "^11.5.1",
    "boring-avatars": "^2.0.1",
    "chance": "^1.1.13",
    "cookie": "^1.0.2",
    "cross-env": "^10.0.0",
    "dayjs": "^1.11.18",
    "drizzle-orm": "^0.44.3",
    "framer-motion": "^12.23.12",
    "isbot": "^5.1.30",
    "jotai": "^2.13.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.542.0",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.6",
    "postgres": "^3.4.7",
    "react": "^19.1.1",
    "react-activity-calendar": "^2.7.13",
    "react-dom": "^19.1.1",
    "react-hook-form": "^7.62.0",
    "react-infinite-scroll-hook": "^6.0.1",
    "react-router": "^7.8.2",
    "superjson": "^2.2.2",
    "usehooks-ts": "^3.1.1",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@react-router/dev": "^7.8.2",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/vite": "^4.1.13",
    "@types/chance": "^1.1.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24",
    "@types/nodemailer": "^7.0.1",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "drizzle-kit": "^0.31.4",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwindcss": "^4.1.13",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.4",
    "vite-bundle-visualizer": "^1.2.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-tailwindcss"
    ]
  }
}
